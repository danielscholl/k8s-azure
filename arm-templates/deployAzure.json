{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "unique": {
      "type": "string",
      "metadata": {
        "description": "Small unique string."
      },
      "minLength": 2,
      "maxLength": 5
    },
    "servicePrincipalAppId": {
      "type": "string",
      "metadata": {
        "description": "ObjectId for User allowed KeyVault Secret Access. (az ad user show --upn user@email.com)"
      }
    },
    "adminUser": {
      "type": "string",
      "metadata": {
        "description": "Admin user account name."
      },
      "minLength": 3
    },
    "adminSSHKey": {
      "type": "securestring",
      "metadata": {
        "description": "Admin user public ssh key."
      }
    },
    "vnetPrefix": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network Address Prefix (CIDR)"
      },
      "defaultValue": "10.1.0.0/24"
    },
    "subnetPrefix": {
      "type": "string",
      "metadata": {
        "description": "Subnet 1 Address Prefix (CIDR)"
      },
      "defaultValue": "10.1.0.0/24"
    },
    "remoteAccessACL": {
      "type": "string",
      "metadata": {
        "description": "Remote Access CIDR"
      },
      "defaultValue": "Internet"
    },
    "serverNamePrefix": {
      "metadata": {
        "description": "Backend Virtual Machine Name."
      },
      "type": "string",
      "minLength": 1,
      "defaultValue": "vm"
    },
    "serverSize": {
      "metadata": {
        "description": "Backend Virtual Machine Size."
      },
      "type": "string",
      "defaultValue": "Standard_A1"
    },
    "serverCount": {
      "type": "int",
      "metadata": {
        "description": "Number of machines to deploy."
      },
      "defaultValue": 1
    },
    "storageAccountType": {
      "type": "string",
      "metadata": {
        "description": "Account type, premium vs standard, and local, global redundancy"
      },
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Premium_LRS"
      ]
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "TemplateStorage",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat('https://raw.githubusercontent.com/danielscholl/docker-swarm-azure/master/arm-templates/nested/', 'deployStorageAccount.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "storageAccountType": {
            "value": "[parameters('storageAccountType')]"
          }
        }
      }
    },
    {
      "name": "TemplateKeyVault",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat('https://raw.githubusercontent.com/danielscholl/docker-swarm-azure/master/arm-templates/nested/', 'deployKeyVault.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "unique": {
            "value": "[parameters('unique')]"
          },
          "servicePrincipalAppId": {
            "value": "[parameters('servicePrincipalAppId')]"
          },
          "adminUserName": {
            "value": "[parameters('adminUser')]"
          },
          "publicSSHKeyData": {
            "value": "[parameters('adminSSHKey')]"
          }
        }
      }
    },
    {
      "name": "TemplateVNet",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat('https://raw.githubusercontent.com/danielscholl/docker-swarm-azure/master/arm-templates/nested/', 'deployVNet.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "unique": {
            "value": "[parameters('unique')]"
          },
          "vnetPrefix": {
            "value": "[parameters('vnetPrefix')]"
          },
          "subnet1Prefix": {
            "value": "[parameters('subnetPrefix')]"
          },
          "remoteAccessACL": {
            "value": "[parameters('remoteAccessACL')]"
          }
        }
      }
    },
    {
      "name": "TemplateLoadBalancer",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat('https://raw.githubusercontent.com/danielscholl/docker-swarm-azure/master/arm-templates/nested/', 'deployLoadBalancer.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "unique": {
            "value": "[parameters('unique')]"
          },
          "numberOfInstances": {
            "value": "[parameters('serverCount')]"
          }
        }
      }
    },
    {
      "name": "TemplateVirtualMachine",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat('https://raw.githubusercontent.com/danielscholl/docker-swarm-azure/master/arm-templates/nested/', 'deployVirtualMachineAS.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "subnetId": {
            "value": "[reference('TemplateVNet').outputs.subnets.value.subnet1Id]"
          },
          "loadBalancerId": {
            "value": "[reference('TemplateLoadBalancer').outputs.loadBalancer.value.id]"
          },
          "storageAccount": {
            "value": "[reference('TemplateStorage').outputs.storageAccount.value.name]"
          },
          "storageKey": {
            "value": "[reference('TemplateStorage').outputs.storageAccount.value.key]"
          },
          "vmName": {
            "value": "[parameters('serverNamePrefix')]"
          },
          "vmSize": {
            "value": "[parameters('serverSize')]"
          },
          "numberOfInstances": {
            "value": "[parameters('serverCount')]"
          },
          "adminUserName": {
            "reference": {
              "keyVault": {
                "id": "[reference('TemplateKeyVault').outputs.keyVault.value.id]"
              },
              "secretName": "adminUserName"
            }
          },
          "sshKeyData": {
            "reference": {
              "keyVault": {
                "id": "[reference('TemplateKeyVault').outputs.keyVault.value.id]"
              },
              "secretName": "sshPublicKey"
            }
          }
        }
      }
    }
  ],
  "outputs": {}
}
